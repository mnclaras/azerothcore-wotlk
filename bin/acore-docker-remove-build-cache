# Args
# $1: Cache folder
if [ "$(id -u)" != "0" ] && [ "$OSTYPE" != "msys" ] ; then
    echo "Please run the script with sudo"
else
    rm -rf ./docker/build/$1/CMakeFiles
    rm -rf ./docker/build/$1/deps
    rm -rf ./docker/build/$1/src
    rm -rf ./docker/build/$1/modules
    rm ./docker/build/$1/*.cmake
    rm ./docker/build/$1/*.txt
    rm ./docker/build/$1/*.h
    rm ./docker/build/$1/*.cpp
    rm ./docker/build/$1/Makefile
fi
